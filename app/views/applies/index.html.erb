<% if user_signed_in? %>
  <h1><%= "#{t(:applies)} #{current_user.name}" %></h1>
      <% @applies.each do |apply| %>
        <div class="card card-footer mt-3">
          <%= link_to project_path(apply.project), style: 'text-decoration: none; color: black;'  do %>
              <h3><%= apply.project.title %></h3>
              <div class="text-muted">
                <%= t(:deadline) %>:
                <%= apply.project.deadline.strftime("%d  %h  %Y") %>
              </div>
          <% end %>
          <div class="project-applies-refuse-button mt-3">
              <% if can? :destroy, apply %>
                <%= button_to t(:refuse_project), apply, method: :delete, class: 'btn btn-primary mb-0' %>
              <% end %>
          </div>
        </div>
      <% end %>
<% end %>
<div class="mt-3">
<%= link_to t(:back_to_all_project), projects_path,class: 'project-company-name' %>
</div>